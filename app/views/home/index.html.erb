<div class="view">
  <div class="full-bg-img flex-center">
    <div class="container ml-auto mb-5">
      <br><br><br><br>
      <h1 class="display-2 ml-auto">Fight bold.</h1></li>
      <h3 class=" mb-3 ml-auto">Start your career as a fighter, or help someone accomplish their goal.</h3>
      <form class="form-inline">
        <input class="form-control mr-sm-2" type="text" placeholder="Find players." aria-label="Search">
        <button class="btn btn-secondary my-2 my-sm-0" id="hook_button"type="submit">Search</button>
      </form>
    </div>
  </div>
</div>

<div class="jumbotron" id="hook">
  <div class="container ">
    <h1 class="display-4">Fundraising specialized for fighting game players.</h1>
    <h4 class="lead">From Marvel Infnite to Guilty Gear, no matter what you play, we can help you fulfill your goals.</h4>
    <hr class="my-4">
    <h4 class="lead">Just create your player profile and start crowdfunding your career.</h4>
    <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more &raquo;</a></p>
    <br><br>
  </div>
</div>

<div class="container">
  <div id="main_goal_headline" class="ml-auto">
    <h2>Players</h2>
  </div>
  <div class="row">
    <% @players.each do |player| %>
      <div class="col mb-4">
        <div class="card p-2" style="width: 20rem;">
          <img class="card-img-top" src="/assets/download.svg" alt="Card image card-img-top">
          <div class="card-block">
            <h4 class="card-title"><%= player.player_name %></h4>
            <p class="card-text"><%= player.description%></p>
            <%= link_to 'Show', player, class: 'btn'%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


  <div class="container mb-5">
    <div id="main_goal_headline" class="ml-auto">
      <h2>Goals</h2>
    </div>
    <div class="row">
      <% @goals.each do |goal| %>
        <div class="col mb-4">
          <div class="card p-2" style="width: 20rem;">
            <img class="card-img-top" src="/assets/download.svg" alt="Card image card-img-top">
            <div class="card-block">
              <h4 class="card-title"><%= goal.title %></h4>
              <p class="card-text"><%= goal.synopsis%></p>
              <%= link_to 'Show', goal, class: 'btn'%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

<% if @goals_own != nil %>
  <div class="container">
    <div id="main_goal_headline" class="ml-auto">
      <h2>MyGoals</h2>
    </div>
    <div class="row">
      <% @goals_own.each do |goal| %>
        <div class="col mb-4">
          <div class="card p-2" style="width: 20rem;">
            <img class="card-img-top" src="/assets/download.svg" alt="Card image card-img-top">
            <div class="card-block">
              <h4 class="card-title"><%= goal.title %></h4>
              <p class="card-text"><%= goal.synopsis%></p>
              <%= link_to 'Show', goal, class: 'btn'%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

