<%= form_with(model: goal, local: true) do |form| %>
  <% if goal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(goal.errors.count, "error") %> prohibited this goal from being saved:</h2>

      <ul>
      <% goal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>




<% if @player == nil %>

  <div class="alert alert-dismissible alert-danger">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong>You must </strong> <a href="<%=new_player_url%>" class="alert-link">create a player page </a> before making a goal incentive. 
</div>

  <% else %>
    <div class="field">
      <h3><%= form.label :title %>
      <%= form.text_field :title, id: :goal_title %></h3>
    </div>

    <div class="field">
      <h3><%= form.label :synopsis %>
      <%= form.text_area :synopsis, id: :goal_synopsis %></h3>
    </div>

    <div class="field">
      <h3><%= form.label :duedate %>
      <%= form.datetime_select :duedate, id: :goal_duedate %></h3>
    </div>

    <div class="field">
      <h3><%= form.label :funds_goal %>
      <%= form.number_field :funds_goal, id: :goal_funds_goal %></h3>
    </div>


    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>

<%end%>
